{
  "files.exclude": {
    "**/__pycache__": true,
    "**/.git": true,
    "**/.vscode": true
  },
  "python.pythonPath": "path/to/your/python/environment",  // Replace with your Python environment path
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": true,
  "python.linting.flake8Enabled": true,
  "editor.formatOnSave": true,
  "editor.tabSize": 4,
  "editor.insertSpaces": true
}
